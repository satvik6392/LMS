<script>
    function sendEmail() {
        var form = $('#sendEmailForm');
        var book = form.data('book'); // Get the book object from data attribute

        $.ajax({
            url: '/book-list/send-email',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ book: book }), // Send the book object as JSON
            success: function(response) {
                alert('Email sent successfully!');
            },
            error: function(xhr, status, error) {
                alert('Error sending email: ' + error);
            }
        });
    }
</script>


