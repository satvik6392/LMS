<!-- [ Main Content ] start -->
<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ breadcrumb ] start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12">
                                        <div class="page-header-title">
                                            <h5 class="m-b-10">Issue List</h5>
                                        </div>
                                        <ul class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="book-list.html"><i class="feather icon-home"></i></a></li>
                                            <li class="breadcrumb-item"><a href="#!">Issue List</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- [ breadcrumb ] end -->
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <!-- [ task-list ] start -->
                            <div class="col-sm-12">
								<div class="card">
									<div class="card-body">
										<form action="/search-book" method="GET">
											<div class="row">
												<div class="col-lg-4">
													<div class="form-group">
														<label>Student Name</label>
														<select class="form-control" name="student_id" id="stuName">
															<option value="">Select Student</option>
															<% students.forEach(function(student) { %>
																<option value="<%= student.id %>">
																	<%= student.first_name %> <%= student.last_name %> (ID: <%= student.id %>)
																</option>
															<% }); %>
														</select>
													</div>
												</div>
												<div class="col-lg-4">
													<div class="form-group">
														<label>Book Name</label>
														<select class="form-control" name="book_id" id="bookName">
															<option value="">Select Book</option>
															<% books.forEach(function(book) { %>
																<option value="<%= book.id %>">
																	<%= book.book_name %> (ISBN: <%= book.isbn %>)
																</option>
															<% }); %>
														</select>
													</div>
												</div>
												<div class="col-lg-4">
													<button type="submit" class="btn btn-warning mt-4"> <i class="fa fa-search"></i> Search</button>
												</div>
											</div>
										</form>
									</div>
								</div>
								
								
								
								
								
								
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Issue List</h5>
										<div class="card-header-right">
											<a href="/issue-list/export" class="btn btn-success"><i class="fa fa-file-excel"></i> Export</a>
											<a href="/issue-list/issue-book" class="btn btn-primary"><i class="fa fa-book"></i> Issue Book</a>
										</div>
                                    </div>
                                    <div class="card-body task-data">
										
                                        <div class="table-responsive form-material">
											<table id="simpletable" class="table dt-responsive task-list-table table-striped table-bordered nowrap">
												<thead>
													<tr>
														<th>Id</th>
														<th>Book Name</th>
														<th>Student Name</th>
														<th>Issue Date</th>
														<th>Return Date</th>
														
														<th>Return Option</th>
														
													</tr>
												</thead>
												<tbody class="task-page">
													<% issues.forEach(function(issue) { %>
														<tr>
															<td><%= issue.id %></td>
															<td><%= issue.Book.book_name %></td>
															<td><%= issue.User.first_name + ' ' + issue.User.last_name %></td>
															<td><%= issue.issue_date ? new Date(issue.issue_date).toLocaleDateString() : '' %></td>
															<td><%= issue.return_date ? new Date(issue.return_date).toLocaleDateString() : '' %></td>
															<td>
																<% if (!issue.return_date) { %>
																	<form action="/issue-list/return-book" method="POST">
																		<input type="hidden" name="issueId" value="<%= issue.id %>">
																		<button type="submit" class="btn btn-primary">Return</button>
																	</form>
																<% } %>
															</td>
															
														</tr>
													<% }); %>
												</tbody>
											</table>
										</div>										
                                    </div>
                                </div>
                            </div>
                            <!-- [ task-list ] end -->
                        </div>
                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
